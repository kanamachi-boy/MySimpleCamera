<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        >

    <TextView
        android:id="@+id/cmTxt1"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cmTxt2"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/cmTxt1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cmTxt3"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/cmTxt1"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/expButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:padding="16dp" >
    </Button>

    <TextView
        android:id="@+id/cmTxt4"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cmTxt5"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cmTxt4"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cmTxt6"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cmTxt5"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cmTxt7"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:padding="5dp"
        android:textColor="#b9ff0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    </RelativeLayout>



</FrameLayout>